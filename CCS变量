<script>
    let selectedOptions = {};
    let answers = {};
    let completedQuestions = new Set();
    const totalQuestions = 7;
    
    function switchTab(tabName) {
        // Hide all tabs
        document.querySelectorAll('.tab-content').forEach(tab => {
            tab.classList.remove('active');
        });
        document.querySelectorAll('.tab-button').forEach(btn => {
            btn.classList.remove('active');
        });
        
        // Show selected tab
        document.getElementById(tabName + '-tab').classList.add('active');
        event.target.classList.add('active');
    }
    
    function selectBlank(questionNum, position) {
        selectedOptions[questionNum] = position;
        const card = document.getElementById('feedback' + questionNum).parentElement;
        card.querySelectorAll('.blank-option').forEach(opt => {
            opt.classList.remove('selected');
        });
        card.querySelector(`[data-position="${position}"]`).classList.add('selected');
    }
    
    function checkAnswer(questionNum, correctAnswer) {
        const feedback = document.getElementById('feedback' + questionNum);
        const selected = selectedOptions[questionNum];
        
        if (!selected) {
            feedback.className = 'feedback incorrect';
            feedback.textContent = 'è¯·å…ˆé€‰æ‹©ä¸€ä¸ªä½ç½®ï¼Por favor, selecciona una posiciÃ³n primero. Please select a position first.';
            return;
        }
        
        if (selected === correctAnswer) {
            feedback.className = 'feedback correct';
            feedback.textContent = 'âœ“ æ­£ç¡®ï¼Â¡Correcto! Correct!';
            completedQuestions.add(questionNum);
            updateProgress();
        } else {
            feedback.className = 'feedback incorrect';
            feedback.textContent = `âœ— ä¸å¯¹ã€‚åº”è¯¥æ˜¯ ${correctAnswer}ã€‚Incorrecto. DeberÃ­a ser ${correctAnswer}. Incorrect. Should be ${correctAnswer}.`;
        }
    }
    
    function selectChoice(questionNum, choice, element) {
        selectedOptions[questionNum] = choice;
        const card = element.closest('.question-card');
        card.querySelectorAll('.choice-btn').forEach(btn => {
            btn.classList.remove('selected');
        });
        element.classList.add('selected');
    }
    
    function checkMultipleAnswer(questionNum, correctAnswers) {
        const feedback = document.getElementById('feedback' + questionNum);
        const selected = selectedOptions[questionNum];
        
        if (!selected) {
            feedback.className = 'feedback incorrect';
            feedback.textContent = 'è¯·å…ˆé€‰æ‹©ä¸€ä¸ªç­”æ¡ˆï¼Por favor, selecciona una respuesta primero. Please select an answer first.';
            return;
        }
        
        if (correctAnswers.includes(selected)) {
            feedback.className = 'feedback correct';
            feedback.textContent = 'âœ“ æ­£ç¡®ï¼Â¡Correcto! Correct!';
            completedQuestions.add(questionNum);
            updateProgress();
        } else {
            feedback.className = 'feedback incorrect';
            feedback.textContent = `âœ— ä¸å¯¹ã€‚æ­£ç¡®ç­”æ¡ˆå¯ä»¥æ˜¯ ${correctAnswers.join('ã€')}ã€‚Incorrecto. Las respuestas correctas pueden ser ${correctAnswers.join(', ')}. Incorrect. Correct answers can be ${correctAnswers.join(', ')}.`;
        }
    }
    
    function updateProgress() {
        const progress = (completedQuestions.size / totalQuestions) * 100;
        document.getElementById('progress-bar').style.width = progress + '%';
        document.getElementById('progress-percent').textContent = Math.round(progress) + '%';
        
        if (completedQuestions.size === totalQuestions) {
            setTimeout(() => {
                alert('ğŸ‰ æ­å–œå®Œæˆæ‰€æœ‰ç»ƒä¹ ï¼Â¡Felicitaciones por completar todos los ejercicios! Congratulations on completing all exercises!');
            }, 500);
        }
    }
    
    // åˆå§‹åŒ–è¿›åº¦æ¡
    updateProgress();
</script>
</body>

